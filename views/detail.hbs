<div class="detail-img">
  <img src="{{restaurant.image}}">
</div>
<table class="detail-data">
  <tr>
    <td>中文名稱</td>
    <td>:</td>
    <td>{{restaurant.name}}</td>
  </tr>
  <tr>
    <td>英文名稱</td>
    <td>:</td>
    <td>{{restaurant.name_en}}</td>
  </tr>
  <tr>
    <td>類別</td>
    <td>:</td>
    <td>{{restaurant.category}}</td>
  </tr>
  <tr>
    <td>地址</td>
    <td>:</td>
    <td>{{restaurant.location}}
      <a class="map-link" href="{{restaurant.google_map}}" target="_blank">
        <i class="fa-solid fa-map-location-dot"></i>
      </a>
    </td>
  </tr>
  <tr>
    <td>電話</td>
    <td>:</td>
    <td>{{restaurant.phone}}</td>
  </tr>
  <tr>
    <td>介紹</td>
    <td>:</td>
    <td>{{restaurant.description}}</td>
  </tr>
</table>
<div class="detail-page-btns">
  {{#if (and isLoggedIn editBtns)}}
  <!-- 編輯/刪除 -->
  <a class="edit-btn" href="/users/restaurant/{{restaurant.id}}/edit">編輯</a>
  <form class="delete-form" action="/users/restaurant/{{restaurant.id}}?_method=DELETE" method="POST">
    <button class="delete-btn" type="submit">刪除</button>
  </form>
  {{/if}}
  <a class="return-btn" href="{{back}}">返回</a>
</div>